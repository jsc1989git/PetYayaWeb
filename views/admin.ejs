    <% posts.forEach(post => { %>
      
      <!-- Post Container -->
      <div class="post-container mb-4 p-3 border rounded bg-white">
        <div class="d-flex align-items-center">
          <!-- Avatar -->
          <div class="d-flex">
          <img src="https://avataaars.io/?avatarStyle=Circle&topType=ShortHairShaggyMullet&accessoriesType=Sunglasses&hairColor=SilverGray&facialHairType=MoustacheMagnum&facialHairColor=BrownDark&clotheType=ShirtCrewNeck&clotheColor=Gray01&eyeType=Surprised&eyebrowType=UnibrowNatural&mouthType=Vomit&skinColor=Pale"
